<div class="card mt-3">
  <div class="card-header bg-primary text-white">
    <h5 class="card-title">Todo App</h5>
  </div>
  <div class="card-body">

    <%= form_with(model: todo, data: {controller: "todo"}, html: {id: 'todo_form'}) do |f| %>
      <div class="form-row ">
        <div class="form-group col-10">
          <%= f.text_field :title, :"data-todo-target" => 'focus', class: 'form-control'  %>
        </div>
        <div class="form-group col-2">
          <%= f.button data: {action: "click->todo#submit"}, class: 'btn btn-primary float-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<hr>
<% if todo.errors.any? %>
  <ul>
    <% todo.errors.full_messages.each do |erro| %>
      <li><%= erro %></li>
    <% end %>
  </ul>
<% end %>
